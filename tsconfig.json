{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "noImplicitReturns": true,
    "module": "commonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
